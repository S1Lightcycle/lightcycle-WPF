<Window x:Class="S1lightcycle.Windows.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfigurationWindow" WindowState="Maximized" KeyDown="Window_KeyDown" WindowStyle="None" MouseDown="Window_MouseDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height ="5*" />
            <RowDefinition Height ="1*" />
            <RowDefinition Height ="5*" />
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="1" Background="Red" />
        <Border Grid.Column="2" Grid.Row="1" Background="Blue" />
        <Label Content="Place your robots!" Name="lblRobot"  Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>
    </Grid>
</Window>
