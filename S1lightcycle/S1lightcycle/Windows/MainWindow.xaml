<Window x:Class="S1lightcycle.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lightcycle Menu"
        Icon="/S1lightcycle;component/Resources/lightcycle.ico"
        WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="../Resources/tron-legacy-light-cycles_130105.png"></ImageBrush>
    </Window.Background>
    <Grid>
        <StackPanel Margin="50" >
            <Button x:Name="btnStartGame" MinHeight="50px" Background="#00000000" Click="btnStartGame_Click" IsEnabled="True" FontSize="72" FontWeight="Bold" Foreground="White" FontFamily="Showcard Gothic">Start Game</Button>
            <Button x:Name="btnOptions" MinHeight="50px" Background="Transparent" Click="btnOptions_Click" Content="Options"  FontSize="72" FontWeight="Bold" Foreground="White" FontFamily="Showcard Gothic" Margin="0,20,0,0"/>
            <Button x:Name="btnExit" MinHeight="50px" Background="Transparent" Click="btnExit_Click"  FontSize="72" FontWeight="Bold" Foreground="White" FontFamily="Showcard Gothic" Margin="0,20,0,0">Exit</Button>
        </StackPanel>
       

    </Grid>
</Window>
