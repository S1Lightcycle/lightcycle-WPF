<Window x:Class="S1lightcycle.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lightcycle Menu" Height="350" Width="525">
    <Window.Background>
        <ImageBrush ImageSource="../Resources/tron-legacy-light-cycles_130105.png"></ImageBrush>
    </Window.Background>
    <Grid>

        <StackPanel Margin="50,50,50,0" >
            <Button x:Name="btnStartGame" MinHeight="50px" Background="Transparent" Click="btnStartGame_Click" IsEnabled="False">Start Game</Button>
            <Button x:Name="btnOptions" MinHeight="50px" Background="Transparent" Click="btnOptions_Click">Options</Button>
            <Button x:Name="btnExit" MinHeight="50px" Background="Transparent" Click="btnExit_Click">Exit</Button>
        </StackPanel>
        <Label x:Name="lbl_connecting" Content="CONNECTING..." HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="50,21,0,0" VerticalAlignment="Top" Width="417" FontSize="16" FontWeight="Bold" Foreground="Yellow"/>

    </Grid>
</Window>
