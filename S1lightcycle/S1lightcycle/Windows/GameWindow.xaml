<Window x:Class="S1lightcycle.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lightcycle" KeyDown="Window_KeyDown" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Canvas Name="GameFieldCanvas" Background="White" Grid.Column="1" HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
